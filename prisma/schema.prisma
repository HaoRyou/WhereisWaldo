generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model userforWaldo {
  id       Int         @id @default(autoincrement())
  name     String
  username String
  password String
  scores   ScoreBoard[]  // relation to the scoreboard
}

model ScoreBoard {
  id        Int          @id @default(autoincrement())
  user      userforWaldo @relation(fields: [userId], references: [id])
  userId    Int
  timeUsed  Int
  createdAt DateTime     @default(now())
}
